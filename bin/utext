import os
import sys
from gi.repository import Gtk

if __name__ == '__main__':
	if __file__.startswith('/opt/extras.ubuntu.com/utext') or os.getcwd().startswith('/opt/extras.ubuntu.com/utext'):
		sys.path.insert(1, '/opt/extras.ubuntu.com/utext/share/utext')
	else:
		sys.path.insert(1,os.path.normpath(os.path.join(os.getcwd(), '../src')))
	from utext import uText
	####################################################################
	filename = None
	if len(sys.argv)>1:
		if os.path.exists(sys.argv[1]):
			filename = sys.argv[1]
	uTextEx = uText(filename)
	Gtk.main()
exit(0)
